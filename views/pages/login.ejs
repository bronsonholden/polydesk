<% endpoint = sails.getRouteFor('AuthController.login') %>
<% url = endpoint.url + (next ? `?next=${next}` : '') %>

<div class="container">
  <h1>Login</h1>
  <form method="<%- endpoint.method -%>" action="<%- url -%>">
    <div class="form-group">
      <input class="form-control" type="email" name="email">
    </div>
    <div class="form-group">
      <input class="form-control" type="password" name="password">
    </div>
    <div class="form-group">
      <button class="btn btn-primary" type="submit">Submit</button>
    </div>
  </form>
  <br>
  <a href="/">Back</a>
</div>
